//Exercício 01 - Criando um Action de ativação manual

name: Hello Flow
on: workflow_dispatch
jobs:
  first-job:
    runs-on: ubuntu-latest
    steps:
      - name: Diga oi
        run: echo "Hello World!"
      - name: Diga valeu
        run: echo "Valeu - bye!"

          
//Exercício 02 - Criando um Action de ativação programada

name: Hello Flow

on:
  schedule:
    - cron: '*/5 * * * *'

jobs:
  first-job:
    runs-on: ubuntu-latest
    steps:
      - name: Diga oi
        run: echo "Hello World!"
      - name: Diga valeu
        run: echo "Valeu - bye!"

// Exercício 03 - Criando um action de ativação por evento (um push)

name: Hello Flow
on: push

jobs:
  first-job:
    runs-on: ubuntu-latest
    steps:
      - name: Diga oi
        run: echo "Hello World!"
      - name: Diga valeu
        run: echo "Valeu - bye!"
